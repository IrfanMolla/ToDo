<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background2"
    tools:context="com.irfanmolla.todo.RegisterActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/toolbar2">
        <ImageButton
            android:id="@+id/backBtnRegister"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/back"/>
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Username"
        android:textColor="@color/Text" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/registerButton"
        android:layout_below="@+id/cardView3"
        android:text="*mininum 4 characters"
        android:textColor="@color/colorAccent"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView3"
        android:layout_centerHorizontal="true"
        android:text="*Username is already taken"
        android:textColor="@color/colorAccent"
        android:visibility="gone" />

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView6"
        app:cardCornerRadius="19dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:id="@+id/cardView3">

        <EditText
            android:id="@+id/registerUsername"
            android:paddingLeft="5dp"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:textColor="@color/Text"
            android:textSize="16sp"
            android:hint="Enter a unique username" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Name"
        android:textColor="@color/Text" />

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/cardView3"
        app:cardCornerRadius="19dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_below="@+id/textView7"
        android:id="@+id/cardView5">

        <EditText
            android:id="@+id/registerName"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:hint="Enter your full name"
            android:paddingLeft="5dp"
            android:textSize="16sp"/>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView7"
        android:layout_below="@+id/cardView5"
        android:layout_marginTop="11dp"
        android:text="Email"
        android:textColor="@color/Text" />

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/cardView3"
        app:cardCornerRadius="19dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_below="@+id/textView8"
        android:id="@+id/cardView6">
        <EditText
            android:id="@+id/registerEmail"
            android:paddingLeft="5dp"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:textColor="@color/Text"
            android:textSize="16sp"
            android:hint="eg. Someone@something.com " />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/cardView6"
        android:layout_marginTop="12dp"
        android:text="Password"
        android:textColor="@color/Text" />

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/cardView3"
        app:cardCornerRadius="19dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_below="@+id/textView9"
        android:id="@+id/cardView7">
        <EditText
            android:id="@+id/registerPassword"
            android:paddingLeft="5dp"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:textColor="@color/Text"
            android:textSize="16sp"
            android:hint="Enter a password "
            android:inputType="textPassword"/>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView7"
        android:layout_centerHorizontal="true"
        android:text="*Atleast 6 characters"
        android:textColor="@color/colorAccent"
        android:id="@+id/textView13"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Confirm password"
        android:textColor="@color/Text" />

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/cardView3"
        app:cardCornerRadius="19dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_below="@+id/textView10"
        android:id="@+id/cardView8">
        <EditText
            android:id="@+id/registerConfirmPass"
            android:paddingLeft="5dp"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:textColor="@color/Text"
            android:textSize="16sp"
            android:hint="Confirm your password"
            android:inputType="textPassword"/>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView8"
        android:layout_centerHorizontal="true"
        android:text="*Doesn't match"
        android:textColor="@color/colorAccent"
        android:id="@+id/textView14"
        android:visibility="gone"/>

    <android.support.v7.widget.CardView
        android:id="@+id/registerButton"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView14"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:backgroundTint="@color/colorAccent"
        app:cardCornerRadius="19dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/textView13"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="Register"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>


</RelativeLayout>
